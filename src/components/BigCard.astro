---
interface Props {
  src: string;
  price?: string;
  model?: string;
  isLarge?: boolean;
};
const { src, price = 0, model = 'default', isLarge = false } = Astro.props;
---

<div class={(isLarge ? 'w-[28rem] h-[50rem] shadow-xl' : 'w-[17.304rem] h-[30.9rem] shadow-md') + ' relative overflow-hidden rounded-xl shadow-cs-dark select-none'}>
  <img src={ src } alt='Foto del vehiculo' class='h-full object-cover relative'>
  <div class="content absolute left-0 bottom-0 w-full h-full">
    <h2 class={(isLarge ? 'bottom-[-4.2rem] text-[10rem]' : 'bottom-[-2.5956rem] text-[6.18rem]') + ' absolute w-full text-cs-light text-center font-semibold after:content-[""] after:w-full after:h-3/5 after:absolute after:left-0 after:bottom-0 font-poppins'}>{ price }</h2>
    <span class={(isLarge ? 'text-5xl bottom-32' : 'text-[1.854rem] bottom-[4.944rem]') + ' absolute text-cs-light w-full font-normal text-center font-poppins'}>{ model }</span>
  </div>
</div>

<style>
  .content {
    background: linear-gradient(to top, #000000, transparent 60%);
  } 
  h2 {
    font-family: Poppins;
  }
  h2::after {
    background: linear-gradient(to top, #000000, transparent);
  }
  span {
    font-family: Poppins;
  }
</style>