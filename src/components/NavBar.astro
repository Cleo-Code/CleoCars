---
interface Props {
    messageOffer?: boolean;
    messageOfferText?: string;
}

const { messageOffer = false, messageOfferText = "âœ‹ This is an Alert Message" } = Astro.props;

import Logo from "../images/CleoCarsLogo.png"

const NavLinks = [
    {
        name: "Inicio",
        url: "/",
    },
    {
        name: "Maquinaria",
        url: "/sobre",
    },
    {
        name: "Contacto",
        url: "/contacto",
    },
];
---

<div class="bg-slate-100 py-3 px-4 mb-5 flex justify-between ">
    <div class="max-w-[128px]">
        <a href="./">
            <img src={Logo.src}>
        </a>
    </div>

    {
        (messageOffer ? <div class="bg-amber-200 text-amber-600 flex items-center justify-center text-center py-1 px-5 rounded-md">{messageOfferText}</div> : [])
    }

    <div class="flex items-center">
        <ul class="flex">
            {
                NavLinks.map(({ url, name }) => (
                    <li class="mx-4">
                        <a class="hover:text-amber-600 transition-colors font-medium" href={url}>{name}</a>
                    </li>
                ))
            }
        </ul>
    </div>
</div>
